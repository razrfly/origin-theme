{
  "name": "Product detail page",
  "slug": "product",
  "description": "Page displaying a single product",
  "model": "products",
  "fields": [
    {
      "id": "product_benefits",
      "label": "Product benefits",
      "type": "collection",
      "fields": [
        {
          "id": "icon",
          "label": "Icon",
          "type": "icon",
          "required": true
        },
        {
          "id": "text",
          "label": "Benefit text",
          "type": "text",
          "required": true,
          "localized": true
        },
        {
          "id": "description",
          "label": "Description",
          "type": "long_text",
          "ui": "markdown",
          "required": false,
          "localized": true
        }
      ],
      "default": [
        {
          "icon": "uil:truck",
          "text": "Free US shipping on all orders over $100",
          "description": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo."
        },
        {
          "icon": "uil:clock-two",
          "text": "Free returns up to 30 days",
          "description": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo."
        },
        {
          "icon": "uil:award",
          "text": "98% customer satisfaction rating",
          "description": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo."
        }
      ],
      "admin_zone": "content"
    },
    {
      "id": "enable_social_sharing",
      "label": "Enable social sharing",
      "type": "toggle"
    },
    {
      "id": "show_stock_level",
      "label": "Show stock level",
      "type": "toggle"
    },
    {
      "id": "enable_quantity",
      "label": "Enable product quantity",
      "hint": "Allows users to set the quantity of the product to be added to cart.",
      "default": true,
      "type": "toggle"
    },
    {
      "id": "max_quantity",
      "label": "Max product quantity",
      "hint": "Sets the limit a product can be added to cart at a time.",
      "default": 99,
      "type": "number",
      "conditions": { "enable_quantity": true }
    },
    {
      "id": "up_sell_cols",
      "label": "Number of upsell products per row",
      "hint": "The max amount of products that initially show on the cross-sell row.",
      "type": "select",
      "options": [2, 3, 4],
      "default": 4
    },
    {
      "id": "expandable_details",
      "label": "Expandable Details",
      "type": "collection",
      "fields": [
        {
          "id": "label",
          "label": "Label",
          "type": "text",
          "required": true,
          "localized": true
        },
        {
          "id": "details",
          "label": "Details",
          "type": "text",
          "required": true,
          "localized": true
        },
        {
          "id": "position",
          "label": "Position",
          "type": "number",
          "required": false,
          "increment": 1
        }
      ],
      "admin_zone": "content"
    },
    {
      "id": "brand",
      "label": "Brand",
      "type": "lookup",
      "model": "content/brands",
      "required": true,
      "admin_zone": "content"
    },
    {
      "id": "product_reviews",
      "label": "Product Reviews",
      "type": "collection",
      "fields": [
        {
          "id": "name",
          "label": "Name",
          "type": "text",
          "required": true
        },
        {
          "id": "quote",
          "label": "Quote",
          "type": "long_text",
          "required": true
        },
        {
          "id": "rating",
          "label": "Rating",
          "type": "select",
          "options": [1, 2, 3, 4, 5],
          "required": true
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date",
          "required": true
        },
        {
          "id": "logo",
          "label": "Logo",
          "type": "lookup",
          "model": "content/logos",
          "required": true
        }
      ],
      "admin_zone": "content"
    }
  ],
  "source_type": "theme",
  "source_id": "origin"
}
